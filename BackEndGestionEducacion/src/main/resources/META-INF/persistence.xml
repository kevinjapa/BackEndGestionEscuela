<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="miUnidadDePersistencia">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- Listado de todas las clases de entidad -->
        <class>ups.edu.ec.model.Alumno</class>
        <class>ups.edu.ec.model.Anio_Lectivo</class>
        <class>ups.edu.ec.model.Cabecera_Factura</class>
        <class>ups.edu.ec.model.Curso</class>
        <class>ups.edu.ec.model.Detalle_Factura</class>
        <class>ups.edu.ec.model.Docente</class>
        <class>ups.edu.ec.model.Matricula</class>
        <class>ups.edu.ec.model.Representante</class>
        <class>ups.edu.ec.model.Rol</class>
        <class>ups.edu.ec.model.Usuario</class>
        <class>ups.edu.ec.daoDatos.Detalle_FacturaDAO</class>
        <!-- Agrega aquí todas las demás clases de entidad -->
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
        </properties>
    </persistence-unit>
</persistence>


